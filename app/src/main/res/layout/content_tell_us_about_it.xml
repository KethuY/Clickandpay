<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/backLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_IV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_back" />

        <com.soffice.clickandpay.UI.RobotoLightTextView
            android:id="@+id/Label_Title_Activity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:text="Tell us about it"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

    </RelativeLayout>

    <com.soffice.clickandpay.UI.RobotoRegularTextView
        android:id="@+id/otherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/lightBlack"
        android:textSize="16sp"
        android:layout_below="@+id/backLayout"
        android:text="Others"/>

    <com.soffice.clickandpay.UI.RobotoLightEditText
        android:id="@+id/support_emailet"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:textColorHint="#80000000"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:layout_below="@+id/otherText"
        android:hint="Email"
        android:visibility="gone"
        android:background="@drawable/roundedcorners_white"
        />

    <com.soffice.clickandpay.UI.RobotoLightEditText
        android:id="@+id/support_uploadpath_et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:singleLine="true"
        android:textColorHint="#80000000"
        android:textColor="@android:color/black"
        android:drawablePadding="10dp"
        android:textSize="14sp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:cursorVisible="false"
        android:drawableLeft="@mipmap/camera_support_tell_us_about_it"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:hint="Upload a photo (Optional)"
        android:layout_below="@+id/support_emailet"
        android:background="@drawable/roundedcorners_white"
        />

    <com.soffice.clickandpay.UI.RobotoLightEditText
        android:id="@+id/support_descrp_et"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="#80000000"
        android:textSize="14sp"
        android:gravity="left"
        android:padding="5dp"
        android:hint="Description"
        android:layout_below="@+id/support_uploadpath_et"
        android:background="@drawable/roundedcorners_white"
        />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/support_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/support_descrp_et"
        android:gravity="center"
        android:text="Submit"
        android:textSize="16sp"
        android:textColor="@android:color/white" />

    <com.soffice.clickandpay.UI.RobotoRegularTextView
        android:id="@+id/label_call_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/lightBlack"
        android:textSize="14sp"
        android:layout_below="@+id/support_submit_btn"
        android:text="For immediate assistance "/>

    <com.soffice.clickandpay.UI.RobotoRegularTextView
        android:id="@+id/text_call_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/button_tint"
        android:textSize="16sp"
        android:layout_below="@+id/label_call_us"
        android:text="Call Us "/>

</RelativeLayout>
