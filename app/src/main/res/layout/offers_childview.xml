<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="2dp">
    <RelativeLayout
        android:id="@+id/offer_parent"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:id="@+id/merchant_big_pic"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="top"/>
        <ImageView
            android:id="@+id/mrchntLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="3dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@color/transparent_black">
            <ImageView
                android:id="@+id/ic_pointer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_room_black_48dp"/>
            <com.soffice.clickandpay.UI.RobotoLightTextView
                android:id="@+id/offer_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_alignTop="@+id/ic_pointer"/>
            <com.soffice.clickandpay.UI.RobotoLightTextView
                android:id="@+id/offer_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/ic_pointer"
                android:layout_toEndOf="@+id/ic_pointer"
                android:layout_alignBottom="@+id/ic_pointer"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/offer_details"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="3dp"
            android:background="@color/transparent_black">
                <com.soffice.clickandpay.UI.RobotoLightTextView
                    android:id="@+id/offersdescpt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/offer_prices"
                    android:textColor="@android:color/white"/>
            <LinearLayout
                android:id="@+id/offer_prices"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp">
                <com.soffice.clickandpay.UI.RobotoLightTextView
                    android:id="@+id/offer_discountprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="discount"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginBottom="2dp"/>
                <com.soffice.clickandpay.UI.RobotoLightTextView
                    android:id="@+id/offer_actualprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actual"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="2dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>