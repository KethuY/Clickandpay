<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sms_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/click_menu_items">

    <LinearLayout
        android:id="@+id/Prof_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!--<FrameLayout
            android:id="@+id/sms_avatar_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">

            <com.example.clickandpay.clickpay.UI.RobotoRegularTextView
                android:id="@+id/sms_avatar_letter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:ellipsize="start"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/sms_avatar_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:visibility="gone" />
        </FrameLayout>-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="top"
            android:orientation="vertical">

            <com.soffice.clickandpay.UI.RobotoRegularTextView
                android:id="@+id/sms_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sms_time"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:text="Name"
                android:singleLine="true"
                android:textColor="@color/lightBlack"
                android:textSize="16sp"
                android:layout_toLeftOf="@+id/sms_time"
                android:layout_toStartOf="@+id/sms_time" />

            <com.soffice.clickandpay.UI.RobotoRegularTextView
                android:id="@+id/sms_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="top|right"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sms_address"
                android:layout_marginTop="10dp">

                <com.soffice.clickandpay.UI.RobotoRegularTextView
                    android:id="@+id/sms_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/SetCount"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="9999999999"
                    android:textColor="@color/lightBlack"
                    android:textSize="14sp" />

                <com.soffice.clickandpay.UI.RobotoRegularTextView
                    android:id="@+id/SetCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="sdg"
                    android:textColor="@color/lightBlack"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.soffice.clickandpay.UI.RobotoLightTextView
                android:id="@+id/phoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/Prof_settings"
        android:background="#E6E6E6" />

</RelativeLayout>