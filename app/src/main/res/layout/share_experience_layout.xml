<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/experienceHeadingLabel"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@mipmap/share"
                    android:layout_height="140dp"
                    android:gravity="center"
                    android:visibility="visible">

                    <com.soffice.clickandpay.UI.RobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share your Exerience"
                        android:layout_marginTop="20dp"
                        android:textSize="25sp"
                        android:textColor="@color/colorPrimary"/>

                    <com.soffice.clickandpay.UI.RobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@ Hard Rock Cafe"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/editTextLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/experienceHeadingLabel"
                android:layout_height="120dp">

                <com.soffice.clickandpay.UI.RobotoLightEditText
                    android:id="@+id/share_experience_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:hint="HAPPY!!!"
                    android:textSize="14sp"
                    android:background="@null"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/attachLayout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_below="@+id/editTextLayout"
                android:layout_height="50dp">
                
                <ImageView
                    android:id="@+id/snapp_IV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/scan_photos_camera"/>

                <ImageView
                    android:id="@+id/at_the_rite_IV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/at_the_rate"/>

            </LinearLayout>

            <TextView
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/attachLayout"
                android:background="@android:color/darker_gray"/>


            <LinearLayout
                android:id="@+id/bottonsLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_below="@+id/separator"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/editTextLayout"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/fb_IV"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/fb_experience_and_feedback"/>

                    <ImageView
                        android:id="@+id/twitter_IV"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/twitter_experience_and_feedback"/>

                    <ImageView
                        android:id="@+id/instagram_IV"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/instagram_experience_and_feedback"/>

                    <ImageView
                        android:id="@+id/more_IV"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/moreicon"/>
                </LinearLayout>

                <com.soffice.clickandpay.UI.RobotoRegularTextView
                    android:id="@+id/submit_experience_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Submit"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@android:color/white"/>

                <com.soffice.clickandpay.UI.RobotoRegularTextView
                    android:id="@+id/cancel_experience_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Cancel"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_colorprimary"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>