<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:contentPadding="0dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/proceedAddMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addMoney"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:visibility="visible">

            <View
                android:id="@+id/colorStyle_TV"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="left|center_vertical"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/vendorlogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"/>

                <com.soffice.clickandpay.UI.RobotoRegularTextView
                    android:id="@+id/date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vendorlogo"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="27th Oct 2016"
                    android:textColor="@color/lightBlack"
                    android:textSize="10sp" />
                <com.soffice.clickandpay.UI.RobotoRegularTextView
                    android:id="@+id/time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_tv"
                    android:layout_marginRight="10dp"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="17:50 pm"
                    android:textColor="@color/lightBlack"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <com.soffice.clickandpay.UI.RobotoRegularTextView
                    android:id="@+id/storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="BIGBAZAR Super Market"
                    android:textColor="@color/lightBlack"
                    android:textSize="14sp" />

                <com.soffice.clickandpay.UI.RobotoLightTextView
                    android:id="@+id/codeEntered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Code : 9999"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/lightBlack"
                    android:textSize="12sp" />

                <com.soffice.clickandpay.UI.RobotoLightTextView
                    android:id="@+id/address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:text="GS 24, Carat Building, Ameerpet road, Hyderabad - 500034"
                    android:textColor="@color/lightBlack"
                    android:textSize="12sp" />

                <com.soffice.clickandpay.UI.RobotoRegularTextView
                    android:id="@+id/transactionID_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Transaction ID : "
                    android:textColor="@color/lightBlack"
                    android:textSize="12sp" />

                <com.soffice.clickandpay.UI.RobotoLightTextView
                    android:id="@+id/transactionID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:textColor="@color/lightBlack"
                    android:text="EAE234A22222"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="10dp">

                <com.soffice.clickandpay.UI.RobotoRegularTextView
                    android:id="@+id/amnount_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textColor="@color/lightBlack"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <com.soffice.clickandpay.UI.RobotoLightTextView
                        android:id="@+id/symbol_rupees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u20B9 "
                        android:textColor="@color/lightBlack"
                        android:textSize="16sp" />

                    <com.soffice.clickandpay.UI.RobotoLightTextView
                        android:id="@+id/amount_rupees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1900.00"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="22sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/transac_status_logo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/success_cashback" />

                <com.soffice.clickandpay.UI.RobotoLightTextView
                    android:id="@+id/transac_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Success"
                    android:textColor="@color/lightBlack"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>