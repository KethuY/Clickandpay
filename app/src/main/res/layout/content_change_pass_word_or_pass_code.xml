<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/backLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_IV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_back" />

        <com.soffice.clickandpay.UI.RobotoLightTextView
            android:id="@+id/Label_Title_Activity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:text="Change Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

        <com.soffice.clickandpay.UI.RobotoRegularTextView
            android:id="@+id/save_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:text="Save"
            android:textSize="14sp" />

    </RelativeLayout>

    <com.soffice.clickandpay.UI.RobotoRegularEditText
        android:id="@+id/current_word"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:textColorHint="#80000000"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:textColor="@color/lightBlack"
        android:textSize="14sp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:password="true"
        android:layout_below="@+id/backLayout"
        android:hint="Current Password"
        android:background="@drawable/roundedcorners_white"
        />

    <com.soffice.clickandpay.UI.RobotoRegularEditText
        android:id="@+id/new_word"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:singleLine="true"
        android:textColorHint="#80000000"
        android:textColor="@color/lightBlack"
        android:textSize="14sp"
        android:password="true"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:hint="New Password"
        android:layout_below="@+id/current_word"
        android:background="@drawable/roundedcorners_white"
        />

    <com.soffice.clickandpay.UI.RobotoRegularEditText
        android:id="@+id/conform_new_word"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:textColor="@color/lightBlack"
        android:textColorHint="#80000000"
        android:textSize="14sp"
        android:gravity="left|center_vertical"
        android:password="true"
        android:padding="5dp"
        android:hint="New Password"
        android:layout_below="@+id/new_word"
        android:background="@drawable/roundedcorners_white"
        />

</RelativeLayout>
